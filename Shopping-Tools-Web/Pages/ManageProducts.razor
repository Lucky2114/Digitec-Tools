@page "/ManageProducts"
@using Shopping_Tools_Api_Services.Core.Brack
@using Shopping_Tools_Api_Services.Core.Digitec

<AuthorizeView>
    <Authorized>
        <ImplementedShopsComponent ImplementedShops="@_implementedShops" />
    </Authorized>

    <NotAuthorized>
        <NotAuthorizedComponent/>
    </NotAuthorized>
</AuthorizeView>

@code {
    private List<IApi> _implementedShops;

    protected override void OnInitialized()
    {
        //Get all implemented API classes:
        _implementedShops = DynamicApiHelper.GetAllImplementingClasses();
        this.StateHasChanged();
        base.OnInitialized();
    }

}